{
  "name": "hebo-validation",
  "description": "validation functions for hebo-js",
  "version": "4.0.0",
  "author": "Steve Caldwell <scaldwell@gmail.com>",
  "ava": {
    "failFast": true,
    "verbose": true
  },
  "bugs": {
    "url": "https://github.com/stevecaldwell77/hebo-validation/issues",
    "email": "scaldwell@gmail.com"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "contributors": [
    "Steve Caldwell <scaldwell@gmail.com>"
  ],
  "dependencies": {
    "joi": "^13.7.0",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "ava": "^0.25.0",
    "codecov": "^3.1.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.6.1",
    "eslint-config-prettier": "^3.1.0",
    "eslint-config-xo-lass": "^1.0.3",
    "eslint-plugin-prettier": "^3.0.0",
    "fixpack": "^2.3.1",
    "husky": "^1.1.2",
    "lint-staged": "^7.3.0",
    "nyc": "^13.0.1",
    "prettier": "^1.14.3",
    "remark-cli": "^5.0.0",
    "remark-preset-github": "^0.0.9",
    "shortid": "^2.2.13",
    "xo": "^0.23.0"
  },
  "engines": {
    "node": ">=8.3"
  },
  "homepage": "https://github.com/stevecaldwell77/hebo-validation",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "keywords": [
    "cqrs",
    "es",
    "hebo-js"
  ],
  "license": "MIT",
  "lint-staged": {
    "linters": {
      "*.js": [
        "xo --fix",
        "git add"
      ],
      "*.md": [
        "remark . -qfo",
        "git add"
      ],
      "package.json": [
        "fixpack",
        "git add"
      ]
    }
  },
  "main": "index.js",
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100,
    "reporter": [
      "lcov",
      "html",
      "text"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": true,
    "trailingComma": "all",
    "tabWidth": 4
  },
  "remarkConfig": {
    "plugins": [
      "preset-github"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stevecaldwell77/hebo-validation"
  },
  "scripts": {
    "ava": "cross-env NODE_ENV=test ava",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "xo && remark . -qfo",
    "nyc": "cross-env NODE_ENV=test nyc ava",
    "test": "npm run lint && npm run ava",
    "test-coverage": "npm run lint && npm run nyc"
  },
  "xo": {
    "prettier": true,
    "space": 4,
    "extends": [
      "xo-lass"
    ],
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "max-len": [
        "error",
        {
          "code": 80,
          "ignoreUrls": true
        }
      ]
    }
  }
}
